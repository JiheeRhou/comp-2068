<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1>Products List</h1>

    <hr class="my-5">

    <a href="/products/new">Create new product</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock Quantity</th>
                <th>Category</th>
                <th>Last Update</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% if (typeof products !== "undefined" && products.length > 0) { %>
                <%  products.forEach(({ id, name, description, price, stock_quantity, category, updatedAt }) => { %>
                    <tr>
                        <td><%= name %></td>
                        <td><%= description %></td>
                        <td><%= price %></td>
                        <td><%= stock_quantity %></td>
                        <td><%= category %></td>
                        <td><%= updatedAt %></td>
                        <td>
                            <a href="/products/<%= id %>">view</a>
                            <a href="/products/<%= id %>/edit">edit</a>
                            <form action="/products/<%= id %>" method="post" onsubmit="return confirm('Are you sure you want to permanently delete this product?')">
                                <input type="hidden" name="_method" value="delete">
                                <button class="standard-link" type="submit">delete</button>
                            </form>
                        </td>
                    </tr>
                <%}) %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("../shared/_footer") %>